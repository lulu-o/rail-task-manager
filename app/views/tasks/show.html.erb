<h1>Task</h1>



<p>Title: <%= @task.title %></p>
<p>Details: <%= @task.details %></p>
<p>Boolean: <%= @task.completed %></p>
<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Back", tasks_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

